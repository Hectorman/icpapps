<div class="outter-wrapper split-screen">

   <div class="start-col">

      <div class="side-header">

         <div class="titulo">
            <img src="/images/ecopetrol-icon.png" />
            <h1>Demostraciones</h1>
         </div>

         <div>
            <img src="/images/logo-ecopetrol.png" />
         </div>

         <div>
            <img src="/images/concept.png" />
         </div>

      </div>

   </div>

   <div class="end-col">

      <div id="login" v-cloak>
        <div class="container">

          <div class="login-form-container cloak">
            <h1>Inicio de Sesión</h1>

            <ajax-form action="login" :syncing.sync="syncing" :cloud-error.sync="cloudError" :handle-parsing="handleParsingForm" @submitted="submittedForm()">
               <div class="form-group">
                 <label>ID</label>
                 <input required type="text" v-model.trim="formData.registro" class="form-control id-form" placeholder="Ingrese su ID" focus-first>
                 <div class="invalid-feedback id-feedback">Por favor ingrese un ID válido</div>
               </div>

               <div v-if="cloudError==='crearPassword'||cloudError==='confirmarPassword'">
                  <div class="form-group">
                    <label for="password">Crear contraseña</label>
                    <input minlength="8" required class="form-control" id="password" type="password"  :class="[formErrors.password ? 'is-invalid' : '']" v-model.trim="formData.password" placeholder="Cree una nueva contraseña" autocomplete="new-password">
                    <div class="invalid-feedback" v-if="formErrors.password">Por favor ingrese una contraseña.</div>
                  </div>
                  <div class="form-group">
                    <label for="confirm-password">Confirmar contraseña</label>
                    <input minlength="8" required class="form-control" id="confirm-password" type="password"  :class="[formErrors.confirmPassword ? 'is-invalid' : '']" v-model.trim="formData.confirmPassword" placeholder="Confirme su contraseña" autocomplete="new-password">
                  </div>
               </div>
               <div class="invalid-feedback" style="display:block" v-if="cloudError==='confirmarPassword'">La contraseña y la confirmación no coinciden.</div>

               <div class="pedirPassword" v-if="cloudError==='pedirPassword'||cloudError==='badCombo'">
                  <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input minlength="8" required class="form-control" id="password" type="password"  :class="[formErrors.password ? 'is-invalid' : '']" v-model.trim="formData.password" placeholder="Escriba su contraseña" autocomplete="new-password">
                    <div class="invalid-feedback">Por favor ingrese una contraseña.</div>
                  </div>
               </div>

              <!-- <div class="form-group">
                <input type="email" class="form-control" placeholder="Email address" :class="[formErrors.emailAddress ? 'is-invalid' : '']" v-model.trim="formData.emailAddress" autocomplete="email" focus-first>
                <div class="invalid-feedback" v-if="formErrors.emailAddress">Please provide a valid email address.</div>
              </div> -->
              <!-- <div class="form-group">
                <input type="password" class="form-control" placeholder="Contraseña" :class="[formErrors.password ? 'is-invalid' : '']" v-model.trim="formData.password" autocomplete="current-password">
                <div class="invalid-feedback" v-if="formErrors.password">Por favor ingresa tu contraseña.</div>
              </div>
              <div class="form-group form-check text-center">
                <input class="form-check-input" type="checkbox" id="remember" name="rememberMe" v-model="formData.rememberMe"/>
                <label class="form-check-label" for="remember">Recordarme</label>
              </div> -->
              <p class="text-danger" v-if="cloudError==='noRegistro'"><small>El ID ingresado no existe en la base de datos.</small></p>
              <p class="text-danger" v-if="cloudError==='badCombo'"><small>La información que ingresaste es incorrecta, verifica el código y la contraseña.</small></p>
              <p class="text-center" v-if="cloudError==='pedirPassword'||cloudError==='badCombo'"><a href="/password/forgot">¿Olvidaste tu contraseña?</a></p>
              <div class="form-group">
                <ajax-button :syncing="syncing" class="btn-dark btn-lg btn-block">CONTINUAR</ajax-button>
              </div>
            </ajax-form>

          </div>
        </div>
      </div>


   </div>

</div>

<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
